{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/fetch/([0-9]+)",
      "dest": "/api/fetch?id=$1",
      "methods": ["GET"]
    },
    {
      "src": "/stream/(.+)",
      "dest": "/api/stream?url=$1",
      "methods": ["GET"]
    },
    {
      "src": "/proxy",
      "dest": "/api/proxy",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "status": 404,
      "headers": { "Content-Type": "application/json" },
      "dest": "/api/error"
    }
  ]
}
